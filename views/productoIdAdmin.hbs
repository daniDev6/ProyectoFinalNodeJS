{{>navAdmin}}


<main>

    <div class="card-producto">
        <div class="card-img-container">
            <img src="{{producto.imagen.secure_url}}" alt="">
        </div>
        <div class="card-text-admin card-text">
            <div class="card-text">
                <h3>{{producto.nombre}}</h3>
                <p class="categoria" id="categoria"></p>
                <p class="descripcion">{{producto.descripcion}}</p>
                <p class="precio">{{producto.precio}}</p>
            </div>
            <div class="btn-container d-column">
                <a href="/update/{{producto._id}}" class="btn btn-primary">actualizar</a>
                <form action="/producto/delete/{{producto._id}}" method="post" class="eliminar">
                    <div class="botones-container">
                        <button type="submit" class="btn btn-danger">Borrar Datos</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</main>
<script>
    const categoria=document.getElementById('categoria')
    if({{producto.categoria}}==1){
        categoria.innerHTML='Tortas'
    }else if({{producto.categoria}}==2){
        categoria.innerHTML='Casamiento'
    }else if({{producto.categoria}}==3){
        categoria.innerHTML='BabyShower'
    }
    
</script>



